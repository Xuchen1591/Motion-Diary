        <TextBox x:Name="nameInput" HorizontalAlignment="Left" Margin="539,608,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="45" Width="193" FontSize="36" TextAlignment="Center" FontFamily="SketchFlow Print" BorderThickness="0" RequestedTheme="Dark"/>
        <Button Content="Done" HorizontalAlignment="Left" Margin="734,605,0,0" VerticalAlignment="Top" Height="51" Width="105" FontSize="24" FontWeight="Bold" Click="Button_Click"/>

    </Grid>
</Page>
